<Window x:Class="mainModules.point_of_sale"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:mainModules"
        mc:Ignorable="d"
        Title="Point of Sale" Height="450" Width="800">

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!-- Digital Slip Preview / Sale tracking -->
        <Grid Grid.Column="0">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="10"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="10"/>
            </Grid.RowDefinitions>


            <StackPanel Grid.Column="1" Grid.Row="1" Orientation="Horizontal">
                <TextBlock  x:Name="lblCurrentSaleInfo" Text="Current Sale Info" FontSize="18" HorizontalAlignment="Left"/>
                <TextBlock  x:Name="lblCurrentSaleTotal" Text="0.00" FontSize="18" HorizontalAlignment="Right" Margin="15,0,0,0"/>
            </StackPanel>

            <DataGrid x:Name="dbgActiveSaleInfo" Grid.Column="1" Grid.Row="2" AutoGenerateColumns="False">
            </DataGrid>

        </Grid>

        <!-- POS Action Panel -->
        <Grid Grid.Column="1">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="10"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="10"/>
            </Grid.RowDefinitions>

            <Grid x:Name="grdQty" Grid.Column="1" Grid.Row="1" Margin="3">

                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <TextBlock x:Name="lblQTY" Text="QTY" Grid.Row="0"/>

                <Grid x:Name="grdQtyActionItems" Grid.Row="1">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBox x:Name="edtQtyNumber" Grid.Column="0" Width="70" Height="Auto" Margin="0,0,10,0"/>
                    <StackPanel Orientation="Horizontal" Grid.Column="1" >
                        <Button x:Name="btnQtyQuickButton1" HorizontalAlignment="Left" VerticalAlignment="Center" Width="30" Height="Auto" Content="2" Click="btnQtyQuickButton1_Click"/>
                        <Button x:Name="btnQtyQuickButton2" HorizontalAlignment="Left" VerticalAlignment="Center" Width="30" Height="Auto" Content="3" Click="btnQtyQuickButton2_Click"/>
                        <Button x:Name="btnQtyQuickButton3" HorizontalAlignment="Left" VerticalAlignment="Center" Width="30" Height="Auto" Content="4" Click="btnQtyQuickButton3_Click"/>

                    </StackPanel>


                </Grid>

            </Grid>

            <Grid x:Name="grdSKU" Grid.Column="1" Grid.Row="2" Margin="3">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Code/SKU" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" />
                <TextBox x:Name="edtSKU" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Center" Height="Auto" KeyDown="edtSKU_KeyDown"/>
                <Button x:Name="btnLookupSKU" Grid.Row="1" Grid.Column="1" Margin="5,0,0,0" Width="50" Height="auto">🔍</Button>

            </Grid>

            <Grid x:Name="grdPrice" Grid.Column="1" Grid.Row="3" Margin="3">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Price" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"/>


                <TextBox x:Name="edtPrice" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Center" Height="Auto"/>

                <Button x:Name="btnChangePrice" Grid.Row="1" Grid.Column="1" Margin="5,0,0,0" Width="100" Height="auto" HorizontalAlignment="Left" Content="Change" Click="btnChangePrice_Click"/>

            </Grid>

            <Grid x:Name="grdDescription" Grid.Column="1" Grid.Row="4" Margin="3">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Description" Grid.Row="0"/>
                <TextBox x:Name="edtProductDescr" Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Left" Height="100" Width="100"/>

            </Grid>

            <Grid x:Name="grdActionButtons" Grid.Column="1" Grid.Row="5">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="btnLogout" Grid.Column="0" Margin="5,0,5,0" Width="60" Height="40" Content="Logout"/>

                <StackPanel Orientation="Horizontal" Grid.Column="1" HorizontalAlignment="Right">
                    <Button x:Name="btnVoidLine" Margin="5,0,5,0" Width="60" Height="40" Content="Void Line"/>
                    <Button x:Name="btnVoidSale" Margin="5,0,5,0" Width="60" Height="40" Content="Void Sale"/>
                    <Button x:Name="btnProcess"  Margin="5,0,5,0" Width="60" Height="40" Content="Process" Click="btnProcess_Click"/>
                </StackPanel>



            </Grid>


        </Grid>

    </Grid>
</Window>
