<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style
           TargetType="Window">

        <Style.Setters>


            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate Template="{x:Type Window}">

                        <Border
                             BorderBrush="#F8F8F8" 
                             BorderThickness="1"
                             Background="#333F44"
                        />

                    </ControlTemplate>
                </Setter.Value>
            </Setter>

        </Style.Setters>

    </Style>


</ResourceDictionary>